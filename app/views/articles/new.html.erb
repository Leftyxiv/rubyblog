<h1>Create a new article</h1>
<% if @article.errors.any? %>

  <h2>Errors</h2>
  <ul>
    <% @article.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with scope: :article, data: { turbo: false }, url: articles_path, local:true do |f| %>
  <%= f.label :title %>
  <br>
  <%= text_field :article, :title %>
  <br>
    <%= f.label :description %>
    <br>
  <%= text_area :article, :description %>
  <br>
  <%= submit_tag "Create" %>
<% end %>
<h1>Showing article details</h1>

<h3><%= @article.title %></h3>
<p><%= @article.description%></p>
<% if @article.user %>
by <%= link_to gravatar_for(@article.user), user_path(@article.user) %>
<% end %>
<%= link_to 'Edit', edit_article_path(@article) %> | 
<%= link_to 'Back', articles_path %> |
<%= link_to 'Delete', article_path(@article), data: { "turbo-method": :delete, "turbo-confirm": "are you sure?" } %>